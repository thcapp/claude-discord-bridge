# Discord Configuration
DISCORD_TOKEN=your_bot_token_here
DISCORD_CLIENT_ID=your_client_id_here
DISCORD_GUILD_ID=your_guild_id_here # Optional

# Allowed Users and Roles (comma-separated)
ALLOWED_USER_IDS=user_id_1,user_id_2
ALLOWED_ROLE_IDS=role_id_1,role_id_2

# Claude CLI Configuration
CLAUDE_CLI_PATH=claude-code
SESSION_TYPE=tmux
PROJECT_BASE_PATH=~/claude-projects
MAX_SESSIONS=10
DEFAULT_TIMEOUT=300

# Features Toggle
ENABLE_STREAMING=true
ENABLE_ATTACHMENTS=true
ENABLE_THREADING=true
ENABLE_PERSISTENCE=true
ENABLE_NOTIFICATIONS=true
EPHEMERAL_SETTINGS=true
AUTO_CREATE_THREADS=true
REACTION_SHORTCUTS=true

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/bot.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Database
DATABASE_PATH=./data/sessions.db