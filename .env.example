# Discord Configuration
DISCORD_TOKEN=your_bot_token_here
DISCORD_CLIENT_ID=your_client_id_here
DISCORD_GUILD_ID=your_guild_id_here  # Optional: For guild-specific commands

# User Access Control (comma-separated IDs)
ALLOWED_USER_IDS=  # Leave empty to allow all users
ALLOWED_ROLE_IDS=  # Leave empty to not check roles

# Claude Configuration
CLAUDE_CLI_PATH=claude-code  # Path to Claude CLI executable
SESSION_TYPE=tmux  # Options: tmux, pty
PROJECT_BASE_PATH=~/claude-projects
MAX_SESSIONS=10
DEFAULT_TIMEOUT=300  # In seconds

# Feature Toggles
ENABLE_STREAMING=true
ENABLE_ATTACHMENTS=true
ENABLE_THREADING=true
ENABLE_PERSISTENCE=true
ENABLE_NOTIFICATIONS=true
EPHEMERAL_SETTINGS=true
AUTO_CREATE_THREADS=true
REACTION_SHORTCUTS=true

# Git Configuration
GIT_ENABLED=true
GIT_USER_EMAIL=claude@discord.bot
GIT_USER_NAME=Claude Bot
GIT_DEFAULT_BRANCH=main
GIT_AUTO_COMMIT=false  # Automatically commit changes
GIT_SIGN_COMMITS=false  # Sign commits with GPG

# GitHub Integration
GITHUB_ENABLED=false  # Enable GitHub integration
GITHUB_TOKEN=  # Personal access token with repo permissions
GITHUB_WEBHOOK_SECRET=  # Secret for webhook validation
GITHUB_WEBHOOK_PORT=3000  # Port for webhook server
GITHUB_DEFAULT_REPO=  # Default repo (owner/repo format)
GITHUB_NOTIFICATION_CHANNEL=  # Channel ID for GitHub notifications

# Security Settings
FS_BOUNDARIES=~/claude-projects,/tmp  # Comma-separated allowed paths
MAX_FILE_SIZE=10485760  # Max file size in bytes (10MB)
ALLOWED_FILE_TYPES=*  # Comma-separated extensions (* for all)
BLOCKED_FILE_TYPES=.exe,.dll,.so,.dylib  # Blocked file extensions

# Bash Command Security
BASH_WHITELIST=  # Comma-separated allowed commands (empty = allow all)
BASH_BLACKLIST=rm -rf,sudo,chmod 777,dd,mkfs  # Blocked command patterns
ENABLE_SANDBOX=true  # Run commands in sandboxed environment

# Rate Limiting
RATE_LIMITING_ENABLED=true
MAX_COMMANDS_PER_MINUTE=30
MAX_FILES_PER_HOUR=100
MAX_PROCESSES_PER_USER=5

# Web Integration
WEB_SEARCH_ENABLED=true
WEB_FETCH_ENABLED=true
WEB_ALLOWED_DOMAINS=  # Comma-separated domains (empty = allow all)
WEB_BLOCKED_DOMAINS=  # Comma-separated blocked domains
WEB_MAX_CONTENT_SIZE=5242880  # Max content size in bytes (5MB)
WEB_TIMEOUT=10000  # Request timeout in milliseconds

# Logging
LOG_LEVEL=info  # Options: error, warn, info, debug
LOG_FILE=./logs/bot.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Database
DATABASE_PATH=./data/sessions.db