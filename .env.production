# Claude Discord Bridge - Production Environment Configuration
# Server: 10.10.10.210

# Node Environment
NODE_ENV=production
PORT=3000
HEALTH_PORT=3001
METRICS_PORT=9090

# Discord Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_GUILD_ID=your_discord_guild_id_here
DISCORD_ALLOWED_USER_IDS=comma_separated_user_ids
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_here

# Claude Configuration
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-opus-20240229
CLAUDE_MAX_TOKENS=4000
CLAUDE_TEMPERATURE=0.7
CLAUDE_USE_CLI=false

# Database Configuration (PostgreSQL)
DB_HOST=postgres
DB_PORT=5432
DB_USER=claude
DB_PASSWORD=claudepass2025
DB_NAME=claude_discord
DB_SSL=false
DB_MAX_CONNECTIONS=20

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis2025secure
REDIS_DB=0
REDIS_KEY_PREFIX=claude:
REDIS_TTL=3600

# Session Configuration
SESSION_SECRET=generate_a_very_long_random_string_here_at_least_64_chars
SESSION_TYPE=tmux
SESSION_TIMEOUT=1800000
SESSION_PERSIST=true
MAX_SESSIONS=50
MAX_SESSIONS_PER_USER=5

# Security Configuration
SECURITY_ENABLED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=30
RATE_LIMIT_WINDOW_MS=60000
SANDBOX_ENABLED=true
SANDBOX_PATH=/app/sandbox
MAX_FILE_SIZE=52428800
AUDIT_LOGGING=true
ENCRYPTION_KEY=generate_another_random_32_char_string_here

# Feature Flags
FEATURE_FILE_OPERATIONS=true
FEATURE_WEB_SEARCH=true
FEATURE_GIT_COMMANDS=true
FEATURE_GITHUB_INTEGRATION=true
FEATURE_BASH_EXECUTION=true
FEATURE_PROCESS_MANAGEMENT=true
FEATURE_TEMPLATES=true
FEATURE_COLLABORATION=true
FEATURE_TOKEN_TRACKING=true
FEATURE_WEBHOOKS=true
FEATURE_VOICE=true
FEATURE_IDE_INTEGRATION=true

# GitHub Integration
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_WEBHOOK_SECRET=generate_webhook_secret_here
GITHUB_ORG=your_github_org
GITHUB_REPO=claude-discord-bridge

# OpenAI Configuration (for voice features)
OPENAI_API_KEY=your_openai_api_key_here

# Google Cloud (optional)
GOOGLE_SPEECH_API_KEY=your_google_api_key_here
GOOGLE_TTS_API_KEY=your_google_tts_key_here

# Azure (optional)
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=eastus

# Webhook Configuration
WEBHOOK_ENABLED=true
WEBHOOK_PORT=3000
WEBHOOK_PATH=/webhook
WEBHOOK_SECRET=webhook_validation_secret_here

# Monitoring Configuration
MONITORING_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_USER=admin
GRAFANA_PASSWORD=grafana2025secure
ALERT_EMAIL=admin@claude-discord.com
ALERT_SLACK_WEBHOOK=https://hooks.slack.com/services/your/slack/webhook

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=backup_encryption_key_32_chars
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
S3_BACKUP_BUCKET=claude-discord-backups
S3_REGION=us-east-1

# Logging Configuration
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_DIR=/app/logs
LOG_MAX_FILES=30
LOG_MAX_SIZE=50m
LOG_COMPRESS=true

# Performance Configuration
CACHE_ENABLED=true
CACHE_TTL=300
STREAMING_ENABLED=true
PAGINATION_ENABLED=true
MAX_MESSAGE_LENGTH=2000
COMMAND_TIMEOUT=30000

# Email Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
SMTP_FROM=Claude Discord Bot <noreply@claude-discord.com>

# Domain Configuration
DOMAIN=claude-discord.com
API_URL=https://bot.claude-discord.com
GRAFANA_URL=https://grafana.claude-discord.com
STATUS_URL=https://status.claude-discord.com

# OAuth Configuration (future)
OAUTH_ENABLED=false
OAUTH_PROVIDER=discord
OAUTH_CLIENT_ID=your_oauth_client_id
OAUTH_CLIENT_SECRET=your_oauth_client_secret
OAUTH_REDIRECT_URI=https://bot.claude-discord.com/auth/callback

# SAML Configuration (enterprise)
SAML_ENABLED=false
SAML_ENTRY_POINT=https://your-idp.com/sso/saml
SAML_ISSUER=claude-discord-bridge
SAML_CERT_PATH=/app/certs/saml.crt

# API Keys (for external services)
SENTRY_DSN=your_sentry_dsn_here
DATADOG_API_KEY=your_datadog_api_key_here
NEW_RELIC_LICENSE_KEY=your_new_relic_key_here

# Development/Debug (set to false in production)
DEBUG=false
VERBOSE_LOGGING=false
SQL_LOGGING=false

# Miscellaneous
TZ=UTC
LOCALE=en_US.UTF-8
MAX_UPLOAD_SIZE=52428800
TEMP_DIR=/tmp
ALLOWED_ORIGINS=https://bot.claude-discord.com,https://grafana.claude-discord.com